<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <% if user_signed_in? %>
            <li>Author:<%=post.user.email%></li>
    <% end %>
  
      Title:<%=post.title%><br>
      Content:<%=post.body%><br>
  <% end %>
</ul>


<%= link_to "New Post", new_post_path %>
